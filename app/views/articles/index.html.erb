<div class="container">
  <div class="row">
    <div class=".col-md-6 .col-sm-offset-3">
      <h1 class="text-center">Articles</h1>
      <% set_articles %>
      <% @articles.each do |article| %>
        <h3><%= link_to article.title, article, class: "dropdown-item text-primary article-index" %></h5>
      <% end %>
      <% if current_user.try(:admin?) %>
        <%= link_to "new", "/articles/new" %>
      <% end %>
    </div>
  </div>
</div>
