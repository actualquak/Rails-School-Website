<div class="container">
  <div class="row">
    <div class=".col-md-6 .col-sm-offset-3">
      <h2 class="text-center">New article</h2>
      <%= bootstrap_form_with model: @article do |form| %>
        <%= form.text_field :title,
                          placeholder: 'title',
                          class: 'form-control' %>
        <% @article.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
        <%= form.text_area :content,
                          placeholder: 'content',
                          class: 'form-control' %>
        <% @article.errors.full_messages_for(:content).each do |message| %>
          <div><%= message %></div>
        <% end %>
        <%= form.submit 'Create Article' %>
      <% end %>
    </div>
  </div>
</div>
