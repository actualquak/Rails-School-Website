<div class="card">
  <p class="text-muted mt-2 mx-2">Added by <strong><%= "dummy" %></strong> on
    <%= l(comment.created_at, format: '%B, %d %Y %H:%M:%S') %></p>

  <blockquote>
    <div class="text-wrap text-break mx-2"><%= comment.content %></div>
  </blockquote>
  <% from_reply_form ||= nil %>
  <% unless from_reply_form %>
    <nav>
      <%= link_to 'Reply', new_comment_path(comment.id), class: "btn btn-primary ms-2 mb-2" %>
      <%= link_to 'Edit', edit_comment_path(comment.id), class: "btn btn-secondary mx-2 mb-2"%>
      <%= link_to "Destroy", comment_path(comment),
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            class: "btn btn-warning me-2 mb-2" %>
    </nav>
  <% end %>
</div>
